pipeline {
    agent any

    stages {
        stage('Build') {
            tools {
                nodejs "Node23"  // Use the Node.js version configured in Jenkins
            }

            steps {
                sh '''
                    npm -v
                    node -v
                    npm ci
                    npm run build
                    ls -la
                '''
            }
        }

        stage('Test') {
            steps {
                sh '''
                    test -f build/index.html
                '''
            }
        }
    }
}
